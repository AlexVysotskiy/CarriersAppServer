{% extends 'base_admin.html.twig' %}

{% block body %}
    <div class="">

        <div class="row">

            <div class="clearfix"></div>

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">

                        <h2>
                            Авторизация
                        </h2>

                        <div class="clearfix"></div>

                    </div>

                    <div class="x_content">
                        <form id="demo-form2" method="post" class="form-horizontal form-label-left" novalidate="">

                            {% if error %}
                                <div class="form-group">
                                    <div class="alert alert-danger">
                                        Введен неверный логин/пароль.
                                    </div>
                                </div>
                            {% endif %}

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="days">
                                    Логин
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="text" id="days" name="_username" class="form-control col-md-7 col-xs-12" value="{{ settings.days is defined ? settings.days.value : '' }}" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="days">
                                    Пароль
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input type="password" id="days" name="_password" class="form-control col-md-7 col-xs-12" value="{{ settings.days is defined ? settings.days.value : '' }}" />
                                </div>
                            </div>


                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-success">Войти</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


